{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "訂單管理系統 - 老闆設定表單，客戶填寫訂單",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build:electron": "next build && electron-builder",
    "build:win": "next build && electron-builder --win",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "date-fns": "^2.30.0",
    "electron": "^27.0.0",
    "html2canvas": "^1.4.1",
    "next": "^14.0.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.ordermanagement.app",
    "productName": "訂單管理系統",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "訂單管理系統"
    }
  }
}
